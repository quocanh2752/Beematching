@model Nguoixinviec

<h2>Cập Nhật Hồ Sơ</h2>

<form asp-action="CapNhatHoSo" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IdNguoiDung" />

    <div>
        <label>Email:</label>
        <input asp-for="Email" readonly />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label>Số Điện Thoại:</label>
        <input asp-for="SoDienThoai" />
        <span asp-validation-for="SoDienThoai"></span>
    </div>

    <div>
        <label>Ngày Sinh:</label>
        <input asp-for="NgaySinh" type="date" />
        <span asp-validation-for="NgaySinh"></span>
    </div>

    <div>
        <label>Giới Tính:</label>
        <select asp-for="GioiTinh">
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh"></span>
    </div>

    <div>
        <label>Ảnh Đại Diện:</label>
        <input type="file" name="anhDaiDien" />
    </div>

    <div>
        <label>Ảnh Hồ Sơ:</label>
        <input type="file" name="anhHoSo" />
    </div>

    <button type="submit" class="btn btn-success">Cập Nhật</button>
</form>
